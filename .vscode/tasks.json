{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file latest",
            "command": "${env:MINGW_PATH}\\g++.exe",
            "args": [
                "-std=c++17",
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\isotropic_remeshing.cpp",
                "${workspaceFolder}\\src\\mesh_smoothing.cpp",
                "${workspaceFolder}\\src\\curvature.cpp",
                "${workspaceFolder}\\src\\triangulation.cpp",
                "-I",
                "${env:CGAL_PATH}\\include", 
                "-I",
                "${env:EIGEN3_PATH}", 
                "-I",
                "${env:BOOST_PATH}", 
                "-I",
                "${env:LIBIGL_PATH}\\include"
                "-L",
                "${env:CGAL_PATH}\\lib", 
                "-L",
                "${env:BOOST_PATH}\\stage\\lib",  
                "-lboost_thread-mgw81-mt-s-x64-1_66", 
                "-lboost_system-mgw81-mt-s-x64-1_66", 
                "-lboost_filesystem-mgw81-mt-s-x64-1_66", 
                "-L",
                "${env:VCPKG_PATH}", 
                "-lglew32", 
                "-lglfw3dll", 
                "-lglad", 
                "-Wa,-mbig-obj",
                "-O2",
                "-fdiagnostics-color=always",
                "-g",
                "-o",
                "oresme.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}